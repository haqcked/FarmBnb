<div class="banner">
    <h1>FarmBNB</h1>
    <p>Full List of Animals</p>
</div>

<div class="line">
<%# haq added this link_to to the new_animal_path %>
  <div class="d-flex justify-content-center">
    <%= link_to "Add new animal", new_animal_path, class: "btn btn-primary text-white rounded-3" %>
  </div>

<hr>
</div>

<div class="container p-5">
  <div class="card-animal-index p-3">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal), class:"text-decoration-none" do %>
        <div class ="text-center text-white p-3 rounded-3" style="height: 200px; width 500px; background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(<%= animal.photo.attached? ? cl_image_tag(animal.photo.key) : asset_path('https://res.cloudinary.com/dzh4zrfev/image/upload/v1676895717/farm_animals.jpg') %>)">
          <%= animal.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
