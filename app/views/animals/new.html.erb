<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 class="text-center">Add a New Animal</h3>
        <hr>
          <%= simple_form_for @animal do |f| %>
          <%= f.input :name, label: "Name of animal", placeholder: 'Enter the name' %>
          <%= f.input :description, placeholder: "Add desciption here" %>
          <%= f.input :price, label: "Price", placeholder: "Enter price" %>
          <%= f.association :category, prompt: "Select a category", input_html: {data: { controller: "tom-select"}} %>
          <%= f.input :photo, as: :file %>
          <hr>
          <%= f.submit "Add Animal", class: 'btn btn-danger d-grid gap-2 col-6 mx-auto' %>
        <% end %>
      </div>
      <p></p>
      <%= link_to "Back to animals", animals_path, class: "text-decoration-none" %>
    </div>
  </div>
</div>
