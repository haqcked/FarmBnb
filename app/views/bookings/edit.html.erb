<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <div class="back-edit">
          <h2>Edit and confirm this Booking</h2>
        </div>


        <div class="container p-4">

          <%= simple_form_for(@booking)  do |f| %>
            <div class="form-group">
            <%= f.label :start_date %>
            <%= f.date_field :start_date, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :end_date %>
            <%= f.date_field :end_date, class: "form-control", required: true %>
          </div>

          <%= f.submit "Book Now", class: "btn btn-primary" %>
        <% end %>
        </div>
      </div>
    </div>
   </div>
  </div>
</div>
